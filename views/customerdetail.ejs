<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {},
                    spacing: {},
                }
            }
        }
    </script>
</head>
<body>

    <div class="bg-gray-200 p-4 m-4">
        <h1 class="text-2xl font-bold">Customer Name: <%= customer.name %></h1>
        <h1 class="text-2xl font-bold">Date: <%= customer.createdAt.toLocaleString() %></h1>
        <h1 class="text-2xl font-bold">Date: <%= customer.updatedAt.toLocaleString() %></h1>
    </div>

    <div class="bg-gray-200 p-4 m-4">
        <h1 class="text-2xl font-bold">Entries</h1>
        <ul>
            <% customer.entries.forEach(e => { %>
                <li><%= e.entry %></li>
                <li><%= e.reason %></li>
                
                <li><%= e.createdAt.toLocaleString() %></li>
                <li><%= e.updatedAt.toLocaleString() %></li>

                <a href="/editentry/<%= customer._id %>/<%= e._id %>"><button class="bg-blue-500 text-white p-2 m-2">Edit</button></a>
                <a href="/deleteentry/<%= customer._id %>/<%= e._id %>"><button class="bg-red-500 text-white p-2 m-2">Delete</button></a>

                <hr class="border-1 border-black">
            <% }) %>
        </ul>
    </div>

    <a href="/addentry/<%= customer._id %>" class="bg-blue-500 text-white p-2 m-2"><button>Add entrie</button></a>

    <a href="/customers"><button class="bg-blue-500 text-white p-2 m-2">Back</button></a>
    
</body>
</html>