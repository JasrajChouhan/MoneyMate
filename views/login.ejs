<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MoneyMate - Your stress-free solution for group expenses.</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {},
                    spacing: {},
                }
            }
        }
    </script>
</head>
<body>
    <div class="flex flex-col">

    <div class="flex flex-col gap-6 w-9 justify-center items-center m-auto mt-52 mb-5">
        <form class="flex flex-col gap-6" action="/login" method="post">
            <input class="border-2 border-black rounded-md p-1" type="email" name="email" id="email" placeholder="Email">
            <input class="border-2 border-black rounded-md p-1" type="password" name="password" id="password" placeholder="Password">
            <button class="p-1 border-2 border-black rounded-lg w-40 m-auto bg-blue-400" type="submit">Login</button>
    </form>
    </div>

    <div class="m-auto">
        <!-- error -->
        <% if (typeof error !== 'undefined') { %>
          <p class="text-red-500"><%= error %></p>
        <% } %>
        <!-- success -->
        <% if (typeof success !== 'undefined') { %>
          <p class="text-green-500"><%= success %></p>
        <% } %>
      </div>

    <div class="m-auto mb-52">
        <span>Don't have an account? </span><a href="/registration" class="text-blue-600">Register</a>
    </div>

    </div>

</body>
</html>