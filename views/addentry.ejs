<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Entry</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#2563EB",
                        success: "#16A34A",
                        danger: "#DC2626",
                        light: "#F3F4F6",
                        dark: "#1F2937",
                    },
                    spacing: {
                        '108': '27rem',
                    },
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/css/loader.css">
</head>
<body class="bg-gray-100 font-sans">

        <!-- Loading Overlay -->
        <div id="loadingOverlay" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 hidden">
            <div class="modern-spinner">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>

    <!-- You Gave / You Got Form -->
    <% if (type === 'yougave') { %>
        <div class="max-w-lg mx-auto bg-white shadow-lg rounded-lg p-6 mt-10">
            <h1 class="text-3xl font-bold text-primary mb-6">You Gave</h1>
            <form id="addentryform" action="/addentry/yougave/<%= customer._id %>" method="POST" class="space-y-4">
                <!-- Entry Input -->
                <div>
                    <label for="entry" class="block text-gray-600 text-sm font-medium mb-2">Enter Amount</label>
                    <input autocomplete="off" type="number" id="entry" name="entry" placeholder="Enter Amount" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:outline-none" required>
                </div>
                
                <!-- Reason Input -->
                <div>
                    <label for="reason" class="block text-gray-600 text-sm font-medium mb-2">Reason</label>
                    <input autocomplete="off" type="text" id="reason" name="reason" placeholder="Reason" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:outline-none" required>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit" class="w-full bg-primary text-white py-3 rounded-lg font-semibold hover:bg-blue-600 transition duration-300 ease-in-out">
                        Add Entry
                    </button>
                </div>
            </form>
        </div>

    <% } else if (type === 'yougot') { %>
        <div class="max-w-lg mx-auto bg-white shadow-lg rounded-lg p-6 mt-10">
            <h1 class="text-3xl font-bold text-success mb-6">You Got</h1>
            <form id="addentryform" action="/addentry/yougot/<%= customer._id %>" method="POST" class="space-y-4">
                <!-- Entry Input -->
                <div>
                    <label for="entry" class="block text-gray-600 text-sm font-medium mb-2">Enter Amount</label>
                    <input autocomplete="off" type="number" id="entry" name="entry" placeholder="Enter Amount" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-success focus:outline-none" required>
                </div>

                <!-- Reason Input -->
                <div>
                    <label for="reason" class="block text-gray-600 text-sm font-medium mb-2">Reason</label>
                    <input autocomplete="off" type="text" id="reason" name="reason" placeholder="Reason" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-success focus:outline-none" required>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit" class="w-full bg-success text-white py-3 rounded-lg font-semibold hover:bg-green-600 transition duration-300 ease-in-out">
                        Add Entry
                    </button>
                </div>
            </form>
        </div>
    <% } %>

    <!-- Back Button -->
    <div class="max-w-lg mx-auto mt-4">
        <a href="/customerdetail/<%= customer._id %>" class="inline-block w-full text-center bg-gray-500 text-white py-3 rounded-lg hover:bg-gray-600 transition duration-300 ease-in-out">
            Back
        </a>
    </div>

    <script src="/js/app.js"></script>
    <script>
        // JavaScript to handle loading spinner display on form submission
        document.getElementById('addentryform').addEventListener('submit', function(event) {
            // Show the loading overlay
            document.getElementById('loadingOverlay').classList.remove('hidden');

            // Disable the form submit button to prevent multiple submissions
            document.querySelector('button[type="submit"]').disabled = true;
        });
    </script>
</body>
</html>
