<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Customer</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#2563EB",
                        dark: "#1E293B",
                        light: "#F3F4F6",
                    },
                    spacing: {
                        '108': '27rem',
                    },
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/css/loader.css">
</head>
<body class="bg-gray-100 font-sans">

    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 hidden">
        <div class="modern-spinner">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>

    <!-- Add Customer Form -->
    <div class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-8 mt-10">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6">Add Customer</h1>
        
        <form id="addCustomerForm" action="/addcustomer" method="POST" class="space-y-4">
            <div>
                <label for="name" class="block text-gray-600 text-sm font-medium mb-2">Customer Name</label>
                <input autocomplete="off" type="text" id="name" name="name" placeholder="Enter Customer Name" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:outline-none">
            </div>

            <div>
                <button type="submit" class="w-full bg-primary text-white py-3 rounded-lg font-semibold hover:bg-blue-600 transition duration-300 ease-in-out">
                    Add Customer
                </button>
            </div>
        </form>
    </div>

    <script>
        // JavaScript to handle loading spinner display on form submission
        document.getElementById('addCustomerForm').addEventListener('submit', function(event) {
            // Show the loading overlay
            document.getElementById('loadingOverlay').classList.remove('hidden');

            // Disable the form submit button to prevent multiple submissions
            document.querySelector('button[type="submit"]').disabled = true;
        });
    </script>
</body>
</html>
