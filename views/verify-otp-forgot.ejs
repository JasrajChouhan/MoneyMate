<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/loader.css">
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">

    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 hidden">
        <div class="modern-spinner">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>

    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-semibold mb-6 text-center">Verify OTP</h2>

        <form id="verifyotpforgotform" action="/verify-otp-forgot" method="post" class="flex flex-col gap-4">
            <div>
                <label for="email" class="text-lg font-medium">Email:</label>
                <input
                    class="w-full px-4 py-2 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-100"
                    name="email" value="<%= email %>" readonly />
            </div>

            <input 
                type="text" 
                name="otp" 
                id="otp" 
                placeholder="Enter OTP" 
                required 
                class="px-4 py-2 border-2 border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" />

            <button 
                class="bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition-colors">
                Verify OTP
            </button>
        </form>

        <!-- Error and Success Messages -->
        <div class="mt-4">
            <% if (typeof error !== 'undefined') { %>
                <p class="text-red-500 text-sm"><%= error %></p>
            <% } %>
            <% if (typeof success !== 'undefined') { %>
                <p class="text-green-500 text-sm"><%= success %></p>
            <% } %>
        </div>
    </div>

    <script>
        // JavaScript to handle loading spinner display on form submission
        document.getElementById('verifyotpforgotform').addEventListener('submit', function(event) {
            // Show the loading overlay
            document.getElementById('loadingOverlay').classList.remove('hidden');

            // Disable the form submit button to prevent multiple submissions
            document.querySelector('button[type="submit"]').disabled = true;
        });
    </script>

</body>
</html>
