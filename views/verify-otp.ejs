<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MoneyMate - Verify OTP</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">

    <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full">
        <h2 class="text-2xl font-bold text-center text-gray-700 mb-4">Verify OTP</h2>

        <!-- OTP Form -->
        <form class="space-y-6" action="/verify-otp" method="post">
            <!-- Email Field (Read-Only) -->
            <div class="flex items-center justify-between">
                <label for="email" class="text-gray-600 font-medium">Email:</label>
                <input class="border border-gray-300 p-2 rounded-md w-full bg-gray-100 focus:border-blue-500 focus:outline-none" 
                       name="email" value="<%= email %>" readonly>
            </div>

            <!-- OTP Input Field -->
            <input class="border border-gray-300 p-3 rounded-md w-full focus:border-blue-500 focus:outline-none" 
                   type="text" name="otp" id="otp" placeholder="Enter OTP" required>

            <!-- Submit Button -->
            <button class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition duration-300" 
                    type="submit">Verify OTP</button>
        </form>

        <!-- Error/Success Messages -->
        <div class="mt-4 text-center">
            <% if (typeof error !== 'undefined') { %>
                <p class="text-red-500 text-sm"><%= error %></p>
            <% } %>
            <% if (typeof success !== 'undefined') { %>
                <p class="text-green-500 text-sm"><%= success %></p>
            <% } %>
        </div>
    </div>

    <script src="/public/js/app.js"></script>

</body>
</html>
